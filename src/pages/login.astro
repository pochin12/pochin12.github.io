---
import { SignOut } from "auth-astro/components";
import Layoutmenu from "../layout/Layoutmenu.astro";
import { getSession } from "auth-astro/server";
import { Image } from "astro:assets";
import imageninicio from "../img/tarjeta-inicio.PNG";
const session = await getSession(Astro.request);
if (!session) {
    return Astro.redirect("/");
}
---

<Layoutmenu>
    <h3>Hola {session.user?.name}</h3>
    <div class="container-fluid p-3">
        <div class="card w-100">
            <Image src={imageninicio} class="card-img-top" alt="..." />
            <div class="card-body">
                <p class="card-text text-center">
                    Adoptar salva vidas. Adopcion responsable mas alla del amor
                </p>
            </div>
        </div>
    </div>

    <div class="d-grid gap-3 col-8 mx-auto m-3">
        <button class="btn btn-primary btn-lg" type="button"> Refugios </button>
        <button class="btn btn-primary btn-lg" type="button"> Adoptar </button>
        <button class="btn btn-primary btn-lg" type="button">
            Castraciones
        </button>
        <button class="btn btn-primary btn-lg" type="button">
            Eventos solidarios
        </button>
        <button class="btn btn-primary btn-lg" type="button"> Adoptar </button>
    </div>
    <SignOut>cerrar sesion</SignOut>
</Layoutmenu>
